.banners{
  width: 100%;
  height: 300rpx;
}

.banners image{
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域的样式 */
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  /* flex布局是可以嵌套的 */
  /* 因为是纵向布局，所以设置【主轴】为y轴 */
  flex-direction: column;
  align-items: center;
  /* 设置【侧轴】上子元素的对齐方式 */
  width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background:rgb(240,19,19);
  font-size: 50rpx;
  color: #fff;
  margin:20rpx 0;
}

.navItem text{
  font-size: 26rpx;
  /* 因为权重的问题，上面用的是类，下面用的是标签选择器，所以这里写font-size对上面没有影响 */
}
